<%= form_with model: @user, multipart: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="form-group">
    <%= form.label :role %>
    <%= form.select :role, User.roles.keys, selected: @user.role %>
  </div>

  <%= submit_tag "Submit" %>
<% end %>
